extends layout

block content
  h1 Hello #{firstName}
  p Here are your details
  p Full Name: #{firstName} #{lastName}
  p Phone Number: #{phoneNumber}
  p Date of Birth: #{birthDate}
  p Insurance: #{ins}
  h2 Please provide us with your Insurance
  form.mainForm(method='POST', action='/estimate')
    .row
      .form-group.col-lg-6
        label(for='insCarrier') Insurance Carrier
        input#insCarrier.form-control(type='text', placeholder='Insurance Carrier', name='insCarrier', required="")
      .form-group.col-lg-6
        label(for='insCarrierId') Insurance Carrier Id
        input#insCarrierId.form-control(type='text', placeholder='Insurance Carrier Id', name='insCarrierId', required="")
        input(type='hidden', name='firstName', value=`${firstName}`)
        input(type='hidden', name='lastName', value=`${lastName}`)
        input(type='hidden', name='phoneNumber', value=`${phoneNumber}`)
        input(type='hidden', name='birthDate', value=`${birthDate}`)

      .col-lg-12
        button.btn.btn-primary(type='submit') Submit
